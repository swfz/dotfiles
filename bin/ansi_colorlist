#!/bin/bash

FR=$'\e[1;31m' # Light Red
FG=$'\e[1;32m' # Green
FY=$'\e[1;33m' # Light Yellow
FB=$'\e[1;34m' # Blue
FP=$'\e[1;35m' # Light Purple
FC=$'\e[1;36m' # Cyan
FW=$'\e[0;37m' # White

RS=$'\e[00m'  # Reset

BK=$'\e[40m'  # Background Black
BR=$'\e[41m'  # Background Red
BG=$'\e[42m'  # Background Green
BY=$'\e[43m'  # Background Yellow
BB=$'\e[44m'  # Background Blue
BP=$'\e[45m'  # Background Magenta
BC=$'\e[46m'  # Background Cyan
BW=$'\e[47m'  # Background White

echo "$FR red:    \e[1;31m $RS"
echo "$FG green:  \e[1;32m $RS"
echo "$FY yellow: \e[1;33m $RS"
echo "$FB blue:   \e[1;34m $RS"
echo "$FP purple  \e[1;35m $RS"
echo "$FC cyan:   \e[1;36m $RS"
echo "$FW white:  \e[0;37m $RS"

echo "$BK background black:   \e[40m $RS"
echo "$BR background red:     \e[41m $RS"
echo "$BG background green:   \e[42m $RS"
echo "$BY background yellow:  \e[43m $RS"
echo "$BB background blue:    \e[44m $RS"
echo "$BP background magenta: \e[45m $RS"
echo "$BC background cyan:    \e[46m $RS"
echo "$BW background white:   \e[47m $RS"
